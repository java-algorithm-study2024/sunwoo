package org.example.codingtest;

import java.util.ArrayList;

class Solution {
    public int[] solution(int[] arr) {
        ArrayList<Integer> arra = new ArrayList<>();
        for(int i : arr){
            for(int j = 0 ; j< i; j++){
                arra.add(i);
            }
        }
        int [] answer = new int[arra.size()];
        for(int i = 0 ;i<arra.size();i++){
            answer[i] = arra.get(i);
        }
        return answer;
    }
}